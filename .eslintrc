{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "ignorePatterns": ["bundle*.js", "/scripts/compiled/*.js"],
  "rules": {
    "eqeqeq": "off",
    "indent": ["off", 2, { "SwitchCase": 1 }],
    "multiline-ternary": ["off", "always-multiline"]
  }
}
